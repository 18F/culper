# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Set default charset
[*.{js,scss,html,json,yml,md}]
charset = utf-8

# 4 space indentation
[*.{html}]
indent_style = space
indent_size = 4

# 2 space indention
[*.{js,json,yml,md,apib,jsx,scss,xml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 8
